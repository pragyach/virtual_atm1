<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cf006aff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.virtual_atm.MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
<Button
    android:layout_width="256dp"
    android:layout_height="60dp"
    android:id="@+id/button2"
    android:layout_alignParentTop="true"
    android:clickable="false"

    android:text=" Bank Of India "

    android:textColor="#FF010102"
    android:textSize="24dp"
    android:background="#f1d712" />
<ImageView
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:src="@drawable/atm1"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/button2"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_gravity="right" />
            </LinearLayout>




                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="CHOOSE THE FOLLOWING"
                    android:layout_marginTop="20dp"
                    android:textSize="22dp"

                    android:textColor="#ffff"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image1"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/atm5"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77dp"
                        android:textSize="20dp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:text="Know Your ATM Card "/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/atm6"
                        android:layout_marginTop="60dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:textSize="20dp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:text="Learn how to use ATM"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image3"
                        android:layout_width="96dp"
                        android:layout_marginTop="60dp"
                        android:layout_height="96dp"
                        android:src="@drawable/atm"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_alignBottom="@+id/scrollView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="57dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_marginTop="100dp"


                        android:text="Safety Procedure"
                        android:layout_alignTop="@+id/profile_image3"
                        android:layout_alignRight="@+id/scrollView"
                        android:layout_alignEnd="@+id/scrollView"
                        android:layout_marginRight="44dp"
                        android:layout_marginEnd="44dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>




</RelativeLayout>


